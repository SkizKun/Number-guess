import random

def mode():
    print("\n" + "="*40)
    print("ðŸŽ¯  CHOOSE DIFFICULTY")
    #print("="*40)
    print("1. ðŸŒ± Easy       - 10 attempts")
    print("2. ðŸ”¥ Medium     - 7 attempts")
    print("3. ðŸ’€ Hard       - 5 attempts")
    print("4. â™¾ï¸ Freemode   - Unlimited attempts")
    print("="*40)


    while True:
        choice = input("Enter your choice (1â€“4): ")
        if choice == "1":
            return 10,"ðŸŒ± Easy"
        elif choice == "2":
            return 7,"ðŸ”¥ Medium"
        elif choice == "3":
            return 5,"ðŸ’€ Hard"
        elif choice == "4":
            return None,"â™¾ï¸ Freemode"
        else:
            print(" Invalid choice! Please choose between 1â€“4.")

def game():
    print("\n" + "="*50)
    print("ðŸ“œ  INSTRUCTIONS")
    #print("="*50)
    print("\t1The computer will choose a random number (1â€“100).")
    print("\t2Try to guess the number correctly.")
    print("\t3After each guess, you'll be told if it's too HIGH or too LOW.")
    print("\t4Difficulty gives you limited attempts (except Freemode).")
    print("="*50)

    max_attempts,mode_name=mode()
    num=random.randint(1,100)
    attempts=0
    
    print(f"\nâœ¨ You selected {mode_name} mode!")
    print("ðŸŽ² I have chosen a number between 1 and 100.")
    print("ðŸ¤” Can you guess it?\n")
    
    while True:
        guess=int(input("â†’\tChoose a number between 1-100: "))
        attempts+=1
        if num==guess:
            print(f"ðŸ† You guessed the number {num} correctly!")
            print(f"ðŸ“Š Attempts used: {attempts}")
            print("="*40)
            break
        elif num>guess:
            print("ðŸ“‰ Too Low!")
        elif num<guess:
            print("ðŸ“ˆ Too High!")
        else:
            pass
        if max_attempts is not None and attempts >= max_attempts:
            print(f"ðŸ’€ Out of attempts! The number was {num}.ðŸ’€")
            break
print("\n" + "="*50)
print("ðŸŽ® WELCOME TO THE NUMBER GUESSING GAME ðŸŽ®")
#print("="*50)
while True:
    game()
    op=input("Do You Still Want To Play?(y/n)")
    if op.lower() != 'y':
        print("Thanks for playing !")
        break
    else:
        pass
        
        
